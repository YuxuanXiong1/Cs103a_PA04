<div class="jumbotron">
  <h1>Transactions for <%= user.googlename %></h1>
  <p>Here is your list of things to do!</p>

  <form method="get" action="/tran">
    <label for="sort">Sort By:</label>
    <select name="sort" id="sort">
      <option value="description">Description</option>
      <option value="category">Category</option>
      <option value="amount">Amount</option>
      <option value="date">Date</option>
    </select>
    <input type="submit" value="Sort">
  </form>

  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.description %></td>
          <td><%= item.category %></td>
          <td><%= item.shu_liang %></td>
          <td><%= item.ri_qi %></td>
          <td><a href="/tran/edit/<%= item._id %>">✏️</a></td>
          <td><a href="/tran/remove/<%= item._id %>">🗑️</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h1>Add a New Transaction</h1>
  <form method="post" action="tran">
    <input type="text" name="description" placeholder="description"><br>
    <input type="text" name="category" placeholder="category"><br>
    <input type="number" name="shu_liang" placeholder="amount"><br>
    <input type="text" name="ri_qi" placeholder="yyyy/mm/dd"><br>
    <input type="submit" value="store">
  </form>
</div>
